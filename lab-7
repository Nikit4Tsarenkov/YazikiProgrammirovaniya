.stack  
.data
len 	equ	10 
mas	db	1,0,9,8,0,-7,8,0,-2,0
rez	db	?                     
filename db 'file.txt',0
handle dw 0       
buffer dw ? 
message db '-        $'
.code
start:
mov	ax,@data
mov	ds,ax
mov	cx,len	
xor	ax,ax	
xor	si,si
xor bl,bl	
jcxz exit		
cycl:
cmp	mas[si],0	
jle label
add bl,mas[si]


label:
inc si
loop cycl
mov rez,bl
                   
        
        
        mov ah,3Ch
	
	mov cx, 0
    mov dx,offset filename        ;name of file
    int 21h                 
    mov handle,ax         ;sohranit deskriptor file 
    
    
     
	 mov al,rez
	 cwd 
cwd  
	
	mov bx,10 
	push -1 
	mov dx,0
	
	
cmp ax, 0
jl negative 

digitIn:
 div bx	
add dx, 30h	
 push dx
mov dx,0
cmp ax, 0	
jne digitIn

digitInFile:

mov ah, 40h 
pop dx 
cmp dx, -1 
je metk 
mov buffer, dx 
mov dx, offset buffer 
mov bx, handle 
mov cx, 1 
int 21h 
jmp digitInFile 
 jmp metk



negative:
digitInNeg:
 div bx	
add dx, 30h	
 push dx
mov dx,0
cmp ax, 0	
jne digitInNeg

mov dx,45
push dx
 mov ah, 40h
    mov bx, handle
    pop dx
    mov cx, 1
    int 21h 
digitInFileNeg:
mov ah,40h
mov bx, handle
pop dx
mov cx, 1
cmp dx, -1
je metk   ;       jne - if ne ravno
int 21h
jmp digitInFileNeg
 
metk:
exit: 
mov ax,4c00h 
int 21h ;
 

	

end	start

include labe.txt 

.stack 100h 

.data 
text db ' this is example text','$' 
replacement db ? ; changed  
point db '.$',0 
new_line db 10,13,'$' 
.code 

start: 
init_ds  ;s4itka dati
out_str text  ;vivod texta
out_str new_line ;perehod na druguju str 

get_ch replacement  ;vvod simvola

out_str new_line   ;perehod na novuy str


delete text, replacement ;udalaetsa simvol 

out_str text   ; vivod stroki
;nahodit simvol,propuskaetzadannij simvol,ne zapisivaet ego a zapisivaet sleduushie simvoli
